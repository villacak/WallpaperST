package au.com.main;

import android.content.Context;
import android.graphics.drawable.Drawable;
import android.widget.ImageView;
import android.widget.LinearLayout;
import android.widget.TextView;
import au.com.bean.ImageFieldText;

public class ImageFieldTextView extends LinearLayout {

	private TextView mText;
	private ImageView mIcon;


	public ImageFieldTextView(Context context, ImageFieldText aIconifiedText) {
		super(context);

		this.setOrientation(HORIZONTAL);
		this.setHorizontalFadingEdgeEnabled(true);
		this.setVerticalFadingEdgeEnabled(true);
		this.setHorizontalScrollBarEnabled(true);
		this.setScrollbarFadingEnabled(true);
		this.setPadding(40, 50, 40, 50);
		
		mIcon = new ImageView(context);
		mIcon.setImageDrawable(aIconifiedText.getmImage());
		// left, top, right, bottom
		mIcon.setPadding(0, 2, 5, 0); // 5px to the right
		mIcon.setAdjustViewBounds(true);
		
		LayoutParams ll = new LinearLayout.LayoutParams(LayoutParams.WRAP_CONTENT, LayoutParams.WRAP_CONTENT);
//		ll.setMargins(40, 50, 40, 50);
		
		addView(mIcon, ll);

		mText = new TextView(context);
		mText.setText(aIconifiedText.getmText());
		/* Now the text (after the icon) */
		addView(mText, ll); //new LinearLayout.LayoutParams(LayoutParams.WRAP_CONTENT, LayoutParams.WRAP_CONTENT));
	}


	public void setText(String words) {
		mText.setText(words);
	}


	public void setIcon(Drawable bullet) {
		mIcon.setImageDrawable(bullet);
	}
}
